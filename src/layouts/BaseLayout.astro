---
const { title, description } = Astro.props;
const pathname = Astro.url.pathname;
const url = Astro.url;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="author" content="Josh Freedman" />
		<meta name="description" content={description} />
		<meta name="og:site_name" content="Josh Freedman's Blog" />
		<meta name="og:title" content={title} />
		<meta name="og:description" content={description} />
		<meta name="og:url" content={url} />
		<title>{title}</title>
	</head>
	<body>
		<div class="container">
			<nav>
				<a class:list={["navlink", { active: pathname === "/" }]} href="/">Home</a>
				<a class:list={["navlink", { active: pathname === "/about" }]} href="/about">About</a>
				<a class:list={["navlink", { active: pathname.startsWith("/posts") }]} href="/posts">Posts</a>
				<a class="navlink" href="https://src.freedman.dev" target="_blank" rel="noreferrer">Code</a>
				<a
					class="navlink"
					href="https://hachyderm.io/@joshfreedman"
					target="_blank"
					rel="me"
				>
					Mastodon
				</a>
			</nav>
			<header>
				<h1>Josh Freedman</h1>
				Software developer, cat haver, wanna-be rock climber and runner.
			</header>
			<main>
				<slot />
			</main>
			<footer>
                <span>
                    <a rel="license" href="http://creativecommons.org/licenses/by/4.0/">
                        <img alt="Creative Commons License" src="https://i.creativecommons.org/l/by/4.0/80x15.png" />
                    </a>
                </span>
                <span>
                    This work is licensed under a
                    <a rel="license" href="http://creativecommons.org/licenses/by/4.0/">
                        Creative Commons Attribution 4.0 International License
                    </a>.
                </span>
               
            </footer>
		</div>
	</body>
</html>

<style is:global>
	* {
		transition: all 100ms;
	}
	html {
		font-family: sans-serif;
	}
	body {
		margin: 0;
        background: hsl(250, 0%, 90%);
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin: 0;
	}
    a {
        all: unset;
        text-decoration-line: underline;
        text-decoration-style: dashed;
        cursor: pointer;
    }
    a:hover {
        text-decoration-style: solid;
    }
	a:focus {
		outline: 3px solid hsl(250, 100%, 50%);
	}

	@media (prefers-color-scheme: dark) {
		body {
			background: hsl(250, 0%, 20%);
			color: white;
		}
		a:focus {
			outline-color: hsl(250, 50%, 70%);
		}
	}
</style>

<style>
	.container {
		display: flex;
		flex-direction: column;
	}
	.navlink {
		all: unset;
		cursor: pointer;
		padding: 1rem;
	}
	.navlink:hover {
		background-color: hsl(250, 0%, 80%);
	}
	.navlink:focus {
		outline: 3px solid hsl(250, 100%, 50%);
	}
	header {
		padding: 2rem;
		background-color: hsl(250, 100%, 70%);
        color: white;
	}
    main {
        padding: 2rem;
        background-color: white;
    }
    footer {
        text-align: center;
        display: flex;
        flex-direction: column;
        padding: 2rem;
    }
    nav {
		display: flex;
		background: hsl(250, 0%, 90%);
        overflow-x: auto;
	}

	@media (prefers-color-scheme: dark) {
		header {
			background-color: hsl(250, 50%, 30%);
        	color: white;
		}
		nav {
			background: hsl(250, 0%, 20%);
		}
		main {
        	background: hsl(250, 0%, 25%);
    	}
		.navlink:hover {
			background-color: hsl(250, 0%, 30%);
		}
		.navlink:focus {
			outline-color: hsl(250, 50%, 70%);
			
		}
	}
</style>
