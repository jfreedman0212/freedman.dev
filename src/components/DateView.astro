---
const publicFormatter = new Intl.DateTimeFormat('en-US', {
    day: '2-digit',
    month: 'long',
    year: 'numeric'
});
const titleFormatter = new Intl.DateTimeFormat('en-US', {
    dateStyle: "long",
    timeStyle: "long"
});

interface Props {
    date: Date;
}

const { date } = Astro.props;
---
<time datetime={date.toISOString()} title={titleFormatter.format(date)}>
    {publicFormatter.format(date)}
</time>