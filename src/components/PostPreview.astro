---
import DateView from "./DateView.astro";
import Tags from "./Tags.astro";

interface Props {
    title: string;
    tagline: string;
    datePosted: Date;
    slug: string;
    tags: string[];
}

const { title, tagline, datePosted, slug, tags } = Astro.props;
---
<article>
    <h3>
        <a href={`/posts/${slug}`}>{title}</a>
    </h3>
    <small>
        Posted on <DateView date={datePosted} />
    </small>
    <small>{tagline}</small>
    {tags.length > 0 ? <Tags tags={tags} /> : null}
</article>

<style>
    article {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
</style>